<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/chatPageLayout" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:background="#ffffff" android:weightSum="3">
	<TextView android:layout_width="match_parent" android:gravity="center" android:background="#9dc02a" android:id="@+id/textViewChatSubject" android:textColor="#ffffff" android:layout_height="wrap_content"></TextView>
	<LinearLayout android:weightSum="1" android:id="@+id/linearLayoutChatPageContent" android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent">
		<ListView android:id="@+id/listViewChatPageLayoutContentOutput" android:textFilterEnabled="false" android:layout_width="match_parent" android:clickable="false" android:layout_height="wrap_content" android:transcriptMode="alwaysScroll" android:scrollbars="vertical" android:smoothScrollbar="true" android:layout_marginBottom="5dp" android:stackFromBottom="true" android:layout_weight="1"></ListView>
		<LinearLayout android:id="@+id/linearLayoutChatPageContentInput" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight=".5" android:weightSum="1">

			<EditText
			    android:id="@+id/editTextChatPageContentInput"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:inputType="text"
			    android:textColor="#000000" >

			</EditText>

			<Button
			    android:id="@+id/buttonChatPageContentInput"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="top"
			    android:layout_marginTop="0px"
			    android:layout_weight=".5"
			    android:clickable="false"
			    android:enabled="true"
			    android:text="@string/chatSendText" >

</Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>