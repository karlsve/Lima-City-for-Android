			<EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/editTextChatPageContentInput" android:layout_weight="1" android:inputType="text">
			</EditText>
			<Button android:layout_marginTop="0px" android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chatSendText" android:layout_gravity="top" android:id="@+id/buttonChatPageContentInput" android:layout_weight=".5"></Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>