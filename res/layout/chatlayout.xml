<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/chatPageLayout" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:background="#ffffff" android:weightSum="3">
	<LinearLayout android:layout_width="match_parent" android:background="@drawable/logo" android:id="@+id/LinearLayoutChatLimaCityLogo" android:layout_height="wrap_content"></LinearLayout>
	<TextView android:layout_width="match_parent" android:gravity="center" android:background="#9dc02a" android:id="@+id/textViewChatSubject" android:textColor="#ffffff" android:layout_height="wrap_content"></TextView>
	<LinearLayout android:weightSum="1" android:id="@+id/linearLayoutChatPageContent" android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent">
